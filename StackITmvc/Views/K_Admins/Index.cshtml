@model IEnumerable<StackITmvc.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Company Admins</h1>
<hr />

<section class="index-container">
    <table class="index-container__wrapper">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="functions">
                        <a class="edit"asp-action="Edit" asp-route-id="@item.Id">Edit  <i class="fa fa-edit"></i> </a> |
                        <a class="details" asp-action="Details" asp-route-id="@item.Id">Details  <i class="fa fa-info-circle"></i></a> |
                        <a class="delete" asp-action="Delete" asp-route-id="@item.Id">Delete <i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>
<div>
    <a class="btn--primary" asp-action="Create">Create Admins</a>
</div>
