@model StackITmvc.Models.Job

@{
    ViewData["Title"] = "Create";
}

<h1>Create Job</h1>

<hr />
<h4>Job Information</h4>
<section class="create-information">
    <div class="create-information__wrapper">
        <form asp-action="create" class="create-information__form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JobName" class="control-label"></label>
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn_blue" />
            </div>
        </form>
    </div>
    
</section>
<div>
    <a asp-action="Index">Back to List</a>
</div>
    

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
