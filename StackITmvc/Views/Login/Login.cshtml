@model LoginViewModel

@{Layout = "_homePage";

    ViewBag.Title = "User Login";
}

<main>
    <section class="login">
        <div class="login__wrapper">
            <h2 class="login__title">Login</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="login__email" asp-for="Email">Email</label>
                    <input asp-for="Email" class="input-field form-control" id="name" placeholder="Fill in your Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="login__password" asp-for="Password">Password</label>
                    <input asp-for="Password" class="input-field form-control" id="pwd" placeholder="Fill in your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group check-box-wrapper">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="btn-wrapper">
                    <button type="submit" class="login__button btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </section>
</main>